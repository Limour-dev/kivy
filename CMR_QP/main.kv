<RowLayout@BoxLayout>:
    size_hint_y: None
    height: dp(55)
    orientation: "horizontal"
    tips: ''
    value: ''
    unit: ''
    Widget: # 居中占位
    Label:
        font_size: dp(45)
        size_hint_x: None
        width: dp(160)
        text: root.tips
    Label:
        font_size: dp(45)
        size_hint_x: None
        width: dp(100)
        text: root.value
    Label:
        font_size: dp(45)
        size_hint_x: None
        width: dp(50)
        text: root.unit
    Widget: # 居中占位

<NumButton@Button>
    font_size: dp(90)
    size_hint: (None, None)
    size: (dp(100), dp(100))
    on_release: app.ml.on_textinput_weight(self.text)

<WdWidget@Widget>
    size_hint_x: None
    width: dp(5)
<HtWidget@Widget>
    size_hint_y: None
    height: dp(5)

